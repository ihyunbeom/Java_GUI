                android:background="#00FFFFFF"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:rotation="190"
                android:src="@drawable/ic_star_black_24dp"
                android:id="@+id/star1"/>
