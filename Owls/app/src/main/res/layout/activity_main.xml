                android:background="#00FFFFFF"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:rotation="190"
                android:src="@drawable/ic_star_black_24dp"
                android:id="@+id/star11"/>
        </LinearLayout>
            <LinearLayout
